{
  "name": "todo-app-tests",
  "version": "1.2.0",
  "description": "E2E тесты для Angular Todo App",
  "scripts": {
    "test": "playwright test --project=chromium",
    "test:smoke": "playwright test todo-smoke.spec.ts --project=chromium",
    "test:all": "playwright test",
    "test:headed": "playwright test --headed --project=chromium",
    "test:debug": "playwright test --debug --project=chromium",
    "test:ui": "playwright test --ui",
    "test:api": "playwright test api-todos.spec.ts",
    "test:visual": "playwright test todo-visual.spec.ts --project=chromium",
    "test:visual:update": "playwright test todo-visual.spec.ts --project=chromium --update-snapshots",
    "test:a11y": "playwright test todo-a11y.spec.ts --project=chromium",
    "test:local": "BASE_URL=http://localhost:4200 playwright test --project=chromium",
    "test:local:smoke": "BASE_URL=http://localhost:4200 playwright test todo-smoke.spec.ts --project=chromium",
    "test:local:headed": "BASE_URL=http://localhost:4200 playwright test --headed --project=chromium",
    "clean:allure": "rm -rf allure-results/*",
    "report": "playwright show-report",
    "report:allure": "allure generate allure-results -o allure-report --clean && allure open allure-report",
    "report:allure:clean": "npm run clean:allure && npm test && npm run report:allure",
    "install-browsers": "playwright install --with-deps"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "angular",
    "todo"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "allure-playwright": "^3.4.3"
  }
}
